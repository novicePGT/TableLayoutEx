<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:shrinkColumns="*"
    tools:context=".MainActivity">
    <!-- shrinkColumns 는 위젯을 강제로 줄여서 와이드 사이즈를 맞춰준다.-->
    <!-- TableRow에 weight를 1로 지정하여 사이즈를 맞춘다.-->
    <!-- weight는 비율 계산이기에 height는 0으로 지정해도 된다.-->

    <TableRow
        android:layout_height="0dp"
        android:layout_weight="1">
        <EditText
            android:id="@+id/edit1"
            android:layout_span="5"
            android:hint="숫자 1 입력" />
    </TableRow>
    <TableRow
        android:layout_height="0dp"
        android:layout_weight="1">
        <EditText
            android:id="@+id/edit2"
            android:layout_span="5"
            android:hint="숫자 2 입력" />
    </TableRow>
    <TableRow
        android:layout_height="0dp"
        android:layout_weight="1">
        <Button
            android:id="@+id/btn0"
            android:layout_margin="5dp"
            android:text="0"/>
        <Button
            android:id="@+id/btn1"
            android:layout_margin="5dp"
            android:text="1"/>
        <Button
            android:id="@+id/btn2"
            android:layout_margin="5dp"
            android:text="2"/>
        <Button
            android:id="@+id/btn3"
            android:layout_margin="5dp"
            android:text="3"/>
        <Button
            android:id="@+id/btn4"
            android:layout_margin="5dp"
            android:text="4"/>
    </TableRow>
    <TableRow
        android:layout_height="0dp"
        android:layout_weight="1">
        <Button
            android:id="@+id/btn5"
            android:layout_margin="5dp"
            android:text="5"/>
        <Button
            android:id="@+id/btn6"
            android:layout_margin="5dp"
            android:text="6"/>
        <Button
            android:id="@+id/btn7"
            android:layout_margin="5dp"
            android:text="7"/>
        <Button
            android:id="@+id/btn8"
            android:layout_margin="5dp"
            android:text="8"/>
        <Button
            android:id="@+id/btn9"
            android:layout_margin="5dp"
            android:text="9"/>
    </TableRow>
    <TableRow
        android:layout_height="0dp"
        android:layout_weight="1">
        <Button
            android:id="@+id/btnAdd"
            android:layout_span="5"
            android:layout_margin="5dp"
            android:text="더하기"/>
    </TableRow>
    <TableRow
        android:layout_height="0dp"
        android:layout_weight="1">
        <Button
            android:id="@+id/btnSub"
            android:layout_span="5"
            android:layout_margin="5dp"
            android:text="빼기"/>
    </TableRow>
    <TableRow
        android:layout_height="0dp"
        android:layout_weight="1">
        <Button
            android:id="@+id/btnMul"
            android:layout_span="5"
            android:layout_margin="5dp"
            android:text="곱하기"/>
    </TableRow>
    <TableRow
        android:layout_height="0dp"
        android:layout_weight="1">
        <Button
            android:id="@+id/btnDiv"
            android:layout_span="5"
            android:layout_margin="5dp"
            android:text="나누기"/>
    </TableRow>
    <TableRow
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:id="@+id/textResult"
            android:layout_margin="5dp"
            android:layout_span="5"
            android:textSize="20dp"
            android:textColor="#FF0000"
            android:text="계산 결과 : "/>
    </TableRow>
</TableLayout>